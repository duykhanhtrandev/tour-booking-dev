extend base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Đăng nhập tài khoản của bạn
            form.form
                .form__group
                    label.form__label(for='email') Địa chỉ email
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Mật khẩu
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Đăng Nhập